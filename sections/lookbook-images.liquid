<link rel="stylesheet" href="{{ 'lookbook-styles.css' | asset_url }}">

<h1 class="lookbook__title">{{ section.settings.lookbook }}</h1>

<div class="lookbook__box">
{% for block in section.blocks %}
  <a class="lookbook__button" href="#popup1">
    <img src="{{ block.settings.image | img_url: 'master' }}">
  </a>  
{% endfor %}
</div>

<div id="popup1" class="lookbook__overlay">
  <div class="lookbook__popup">
      <h2>Here i am</h2>
      <a class="close" href="#">&times;</a>
      <div class="content">
          Thank to pop me out of that button, but now i'm done so you can close this window.
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "lookbook-images",
    "settings": [
      {
        "type": "text",
        "label": "your headline for the section",
        "id": "lookbook"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "image",
        "settings": [
          {
            "type": "image_picker",
            "label": "your_image",
            "id": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

